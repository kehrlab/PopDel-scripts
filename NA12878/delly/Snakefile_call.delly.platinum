rule all:
    input:
        "calls/delly/platinum.delly.bcf"

rule delly_call_platinum:
    input:
        ref = "reference/hs38.fa",
        bam = "bam/NA12878_illu_platinum_GRCh38.bam"
    output:
        bcf = "calls/delly/platinum.delly.bcf",
        csi = "calls/delly/platinum.delly.bcf.csi"
    conda:
        "delly.environment.yml"
    shell:
        "delly call -o {output.bcf} -g {input.ref} {input.bam}"
